 {% for property in line_item.properties %}
     {% if property.first == "_spiffTransactionId" %}
         <span class='spiff-line-item-image-container' data-spiff-transaction-id="{{ property.last }}">
         </span>
     {% endif %}
     {% if property.first == "_previewImage" %}
         <img class="cart-item__image" src="{{ property.last }}" alt="{{ line_item.title }}" onerror="this.src = '{{ line_item | img_url: 'x190' }}'; this.onerror='';" />
         {% assign hasSpiffImage = true %}
     {% endif %}
 {% endfor %}
 {% unless hasSpiffImage %}
     <img class="cart__image{% if line_item.image == null %} hide{% endif %}" src="{{ line_item | img_url: 'x190' }}" alt="{{ line_item.image.alt | escape }}" data-cart-item-image>
 {% endunless %}
